<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="no.appsonite.gpsping.viewmodel.GeofenceFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/form_bg"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/tracker"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:visibility="@{viewModel.editableTracker!=null?View.VISIBLE:View.INVISIBLE}" />

            <no.appsonite.gpsping.widget.CustomFontTextView
                style="@style/AppTheme.widget.FormTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-4dp"
                android:text='@{viewModel.editableTracker != null ? viewModel.editableTracker.trackerName.get():"NoName"}'
                android:visibility="@{viewModel.editableTracker!=null?View.VISIBLE:View.INVISIBLE}" />

            <TextView
                style="@style/AppTheme.widget.FormDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/geofenceDesc" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:error="@{viewModel.yardsError}">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/yards"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned"
                    android:singleLine="true"
                    app:twoWayText="@{viewModel.yards}" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/startGeoFence"
            style="@style/AppTheme.widget.Button.Green"
            android:layout_marginTop="@dimen/button_margin_top"
            android:textAllCaps="true"
            android:text="@{viewModel.editableTracker.isGeofenceRunning?@string/stop:@string/start}" />
    </LinearLayout>
</layout>